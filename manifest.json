{
    "manifest_version": 2,

    "name": "Tab Groups",
    "description": "Create, save, and re-open tab groups.",
    "version": "1.0",
    "author": "Matt Stone",

    "browser_action": {
        "default_icon": "media/icon.png",
        "default_popup": "popup.html"
    },

    "background" : {
        "scripts" : ["background.js"]
    },

    "permissions": [
        "tabs",
        "storage",
        "sessions"
    ]
}
